.table > tbody > tr:first-child > td, .table > tbody > tr:first-child > th {
    border: none;
}

.container-fluid {
  padding-top: 5px;
}

.content-container {
  margin-bottom: 20px;
}

.small-logo {
  margin-right: 0px;
  margin-left: 0px;
}

.likes-count {
  font-size: 18px;
}

.help {
  margin-top: 20px;
}

.form-input {
  border-radius: 0;
  height: 34px;
  padding: 6px 12px;
  font-size: 14px;
  line-height: 1.428571429;
  color: #555555;
  background-color: #fff;
  background-image: none;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
}

