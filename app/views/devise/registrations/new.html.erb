<h2>Registrieren</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-group search-form">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email Adresse" %>
  </div>

  <div class="input-group search-form">
    <% if @validatable %>
    <em>Mindestens <%= @minimum_password_length %> Zeichen</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Paßwort" %>
  </div>

  <div class="input-group search-form">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Paßwort Bestätigung" %>
  </div>

  <div class="input-group search-form">
    <span class="input-group-btn">
      <%= submit_tag("Registrieren", class: "btn btn-default") %>
    </span>
  </div>
<% end %>
