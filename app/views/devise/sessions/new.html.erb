<h4>Login</h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="input-group search-form">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email Adresse" %>
  </div>

  <div class="input-group search-form">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "PaÃŸwort" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="input-group search-form">
      <%= f.check_box :remember_me %>&nbsp;
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions input-group search-form">
    <span class="input-group-btn">
      <%= submit_tag("Einloggen", class: "btn btn-default") %>
    </span>
  </div>
<% end %>

<%= render "devise/shared/links" %>
