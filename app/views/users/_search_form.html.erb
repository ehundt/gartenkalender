<%= form_tag(users_path, method: "get") do %>
  <div class="row">
    <div class="col-xs-12">
      <h4>Suche</h4>
    </div>
  </div>
  <div class="row search-form">
    <div class="col-xs-12">
      <div class="input-group">
        <%= text_field_tag(:search, "", class: "form-control", placeholder: "Gartenfreund")  %>
      </div>
    </div>
  </div>
  <div class="row search-form">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-btn">
          <%= submit_tag("suchen", class: "btn btn-default") %>
        </span>
      </div><!-- /input-group -->
    </div><!-- /.col-xs-12 -->
  </div><!-- /.row -->
<% end %>
