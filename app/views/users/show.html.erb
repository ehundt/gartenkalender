<% content_for :sidebar do %>
  <% if @user.picture.file? %>
    <div class="row">
      <div class="col-xs-12">
        <%= link_to image_tag(download_picture_user_path(@user, {size: :medium}), class: "img-rounded img-responsive"), @user %>
     </div>
    </div>
  <% end %>
<% end %>

<div class="row">
  <div class="col-xs-5">
    <h4>
      <%= @user.display_name %>
    </h4>
  </div>
  <div class="col-xs-7 edit-plant-link">
    <% if current_user.admin? || @user == current_user %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;
      <%= link_to "ändern", edit_user_path(@user) %>
    <% end %>
  </div>
</div>

<table class="table">
  <% if current_user.admin? || @user == current_user %>
    <tr>
      <th>Email</th>
      <td><%= @user.email %></td>
    </tr>

    <% if current_user.admin? %>
      <tr>
        <th>Administrator</th>
        <td><% if @user.admin? %>ja<% else %>nein<% end %></td>
      </tr>
    <% end %>
  <% end %>
</table>
<br>

<h5>Veröffentlichte Pflanzen</h5>
<% unless @user.created_plants.empty? %>
  <table class="table">
    <% @user.created_plants.each do |plant| %>
      <tr>
        <td>
          <% if plant.main_image.file? %>
            <%= link_to image_tag(download_main_image_plant_path(plant, {size: :thumb}), class: "img-rounded img-responsive"), plant %>
          <% end %>
        </td>

        <td><%= link_to plant.name, plant %></td>

        <td>
          <strong><%= plant.original.get_likes.size %></strong>
          <%= image_tag("green_flower_icon.png", height: '20px', width: '20px') %>
        </td>
      </tr>
  <% end %>
  </table>
<% else %>
Keine veröffentlichten Pflanzen.
<% end %>
