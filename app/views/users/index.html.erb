<h4>Benutzer</h4>

<table class="table">
  <tr>
    <th>Bild</th>
    <th>Name</th>
    <th>Email</th>
    <th>Admin</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td>
      <% if user.picture.file? %>
        <%= link_to image_tag(download_picture_user_path(user, {size: :thumb}), class: "img-rounded img-responsive"), user %>
      <% end %>
    </td>
    <td><%= link_to "#{user.first_name} #{user.last_name}", user %></td>
    <td><%= user.email %></td>
    <td><%= user.admin %></td>
    <td>
      <% if can? :update, user %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      <%= link_to 'Ändern', edit_user_path(user) %>&nbsp;
      <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
      <%= link_to 'Löschen', user, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>
