<!DOCTYPE html>
<html>
<head>
  <%= display_meta_tags :site => 'Mein Garten' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= favicon_link_tag 'favicon.ico' %>

</head>
<body>

  <div id="main-container" class="container-fluid">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <%= render 'shared/header' %>
      </div>
      <div class="hidden-xs col-md-6 logged-in-status">
        <%= render 'shared/logged_in_status' %>
      </div>
    </div>
    <div class="row head-bg">
      <div class="col-xs-12 col-md-9 col-md-offset-3">
        <%= image_tag("title.png", class: "head img-responsive") %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <%= render 'shared/top_navigation' %>
      </div>
    </div>

    <%= yield %>
  </div>

  <nav class="navbar navbar-default navbar-fixed-bottom">
    <%= render 'shared/footer' %>
  </nav>

</body>
</html>
