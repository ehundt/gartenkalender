<!DOCTYPE html>
<html>
<head>
  <title>Socialgardener</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

<div id="main-container" class="container-fluid">
  <div class="row">
    <div class="col-xs-2 logo">
      <a href="<%= root_url %>" class="logo">
      <img src="<%= image_url("logo.png") %>"><br />
      <b>Intelligenter Gartenkalender</b></a>
    </div>
    <div class="col-xs-7 head">
    </div>
    <div class="col-xs-3 logged-in-status">
      <%= render 'shared/logged_in_status' %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-2">
    </div>
    <div id="content" class="col-xs-7">
       <%= display_tabs %>
       <br />

       <% flash.each do |name, msg| -%>
         <%= content_tag :div, msg, class: "alert alert-#{name}" %>
       <% end -%>

       <%= yield %>
    </div>
    <div id="sidebar" class="col-xs-3">
      <%= render 'shared/sidebar' %>
    </div>
  </div>
</div>
</body>
</html>
