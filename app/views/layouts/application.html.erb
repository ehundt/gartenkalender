<!DOCTYPE html>
<html>
<head>
  <title>PersÃ¶nlicher Gartenkalender</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>

<div id="main-container" class="container-fluid">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'shared/help_menu' %>
    </div>
    <div class="col-xs-9 logged-in-status">
      <%= render 'shared/logged_in_status' %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-3 head-bg">
    </div>
    <div class="col-xs-9 head-bg">
      <%= image_tag("title.png", class: "img-responsive head") %>
    </div>
  </div>
  <div class="row">
    <div id="sidebar" class="col-xs-3">
      <%= render 'seasons/current_season' %>
      <%=  yield :sidebar %>
    </div>
    <div id="content" class="col-xs-8">
       <%= display_tabs %>
       <br />

       <% flash.each do |name, msg| -%>
         <%= content_tag :div, msg, class: "alert alert-#{name}" %>
       <% end -%>

       <%= yield %>
    </div>
    <div class="col-xs-1">
      <% if current_page?(plants_path) || current_page?(search_index_path) %>
      <div class="help"
           data-toggle="popover"
           data-container="body"
           data-trigger="focus"
           title="Hilfe"
           data-placement="left"
           data-html="true"
           data-content='<%= help_content.html_safe %>'
         >
        <a href="#"><%= image_tag("help.jpeg", class: "img-responsive", width: "30px", height: "30px") %></a>
      </div>
      <% end %>
    </div>
  </div>
</div>
</body>
</html>
