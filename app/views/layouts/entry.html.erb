<!DOCTYPE html>
<html>
<head>
  <title>PersÃ¶nlicher Gartenkalender</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= favicon_link_tag 'favicon.ico' %>
</head>

<body>
  <div id="main-container" class="container-fluid">
    <div class="row">
      <div class="col-xs-6">
        <%= render 'shared/header' %>
      </div>
      <div class="col-xs-6 logged-in-status">
        <%= render 'shared/logged_in_status' %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3 head-bg">
      </div>
      <div class="col-xs-9 head-bg">
        <%= image_tag("title.png", class: "img-responsive head") %>
      </div>
    </div>
    <div class="row">
      <div id="sidebar" class="col-xs-3">
        <%= render "shared/search_form" %>
      </div>
      <div id="content" class="col-xs-8 content-container">
         <%= display_tabs %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
         <%= yield %>
      </div>
    </div>
  </div>

  <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
    <%= render 'shared/footer' %>
  </nav>

</body>
</html>
