<% content_for :sidebar do %>
  <div class="row sidebar-contacts">
    <div class="col-xs-12">
      <%= render 'search_form' %>
    </div>
  </div>
<% end %>

<% unless (@plants.nil? || @plants.empty?) %>
  <div class="page-header">
    <h4>Pflanzen anderer GärtnerInnen</h4>
  </div>
  <table class="table">

  <% @plants.each do |plant| %>
    <tr>
      <td>
        <% if plant.main_image.file? %>
          <%= link_to image_tag(download_main_image_plant_path(plant, {size: :thumb}), class: "img-rounded img-responsive"), plant %>
        <% end %>
      </td>
      <td><%= link_to plant.name, plant %></td>
      <td><%= plant.subtitle %></td>
      <td><%= plant.user.display_name %></td>
      <td>
        <%= plant.get_likes.size %>
        <%= image_tag("green_flower_icon.png", height: '15px', width: '15px') %>
      </td>
      <td>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <%= link_to 'Kopieren', clone_plant_path(plant), method: :post %>
      </td>
    </tr>
  <% end %>
  </table>
<% end %>

<%= form_for :plant, url: {action: "create"} do |f| %>
  <div class="row">
    <div class="col-xs-12">
      <h4>Neue Pflanze anlegen</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-2">
      <div class="input-group">
        <span class="input-group-addon">

          <input type="checkbox" aria-label="public" value="true" name="plant[public]" checked="checked">
        </span>
        <span class="input-group-addon">
          öffentlich
        </span>
      </div><!-- /input-group -->
    </div>
    <div class="col-xs-10">
    </div>
  </div>
  <br />
  <div class="row">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon">Pflanzenname</span>
          <%= f.text_field :name, :class => "form-control",
             "aria-label" => "Pflanzenname" %>
      </div>
    </div>
  </div>

  <div class="row form-space">
    <div class="col-xs-12">
      <small>Bilder im png oder jpg Format bis zu 2 Megabyte groß</small>
     </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon">Bild</span>
        <%= f.file_field :main_image, :class => "form-control",
           "aria-label" => "Bild" %>
      </div>
    </div>
  </div>

  <div class="row form-space">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon">Lateinische Bezeichnung</span>
          <%= f.text_field :subtitle, :class => "form-control",
             "aria-label" => "Lateinische-Bezeichnung" %>
      </div>
    </div>
  </div>

  <div class="row form-space">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon">Beschreibung</span>
          <%= f.text_area :desc, :class => "form-control",
             "aria-label" => "Beschreibung", rows: "12" %>
      </div>
    </div>
  </div>

  <div class="row form-space">
    <div class="col-xs-12">
      <div class="pull-right">
          <a href="<%= plants_path %>">Abbrechen</a>&nbsp;
          <%= f.submit "Pflanze speichern", :class => "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>
