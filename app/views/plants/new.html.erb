<br />
<h4>Suche nach Pflanzen befreundeter GärtnerInnen</h4>
<%= form_tag(new_plant_path, method: "get") do %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

<% unless (@plants.nil? || @plants.empty?) %>
  <table class="table plant-list">

  <% @plants.each do |plant| %>
    <tr>
      <td><% if plant.main_image.file? %><%= link_to image_tag(plant.main_image.url(:thumb)), plant %><% end %></td>
      <td><%= link_to plant.name, plant %></td>
      <td><%= plant.subtitle %></td>
      <td><%= plant.user.display_name %></td>
      <td>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <%= link_to 'Übernehmen', edit_plant_path(plant) %>
      </td>
    </tr>
  <% end %>
  </table>
<% end %>

<br />
<h2>Neue Pflanze anlegen</h2>
<br />
<%= form_for :plant, url: {action: "create"} do |f| %>
<div class="input-group">
  <span class="input-group-addon" id="basic-addon1">Pflanzenname</span>
    <%= f.text_field :name, :class => "form-control",
       :placeholder => "Pflanzenname",
       "aria-describedby" => "basic-addon1" %>
</div>
<br />
  <div class="input-group">
    <%= f.file_field :main_image, :class => "form-control",
       "aria-describedby" => "basic-addon1" %>
  </div>
<br />
<div class="input-group">
  <span class="input-group-addon" id="basic-addon1">Kurze Beschreibung</span>
    <%= f.text_field :subtitle, :class => "form-control",
       :placeholder => "Kurze Beschreibung",
       "aria-describedby" => "basic-addon1" %>
</div>
<br />
<div class="input-group">
  <span class="input-group-addon" id="basic-addon1">Beschreibung</span>
    <%= f.text_area :desc, :class => "form-control",
       :placeholder => "Beschreibung",
       "aria-describedby" => "basic-addon1" %>
</div>
<br />
<div class="input-group">
  <span class="input-group-btn">
    <%= f.submit :class => "btn btn-default" %>
  </span>
</div>
<% end %>
