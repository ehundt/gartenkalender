<% content_for :sidebar do %>
  <% if current_user && @plant %>
    <div class="row sidebar-plant">
      <div class="col-xs-12">
        <%= link_to image_tag(@plant.main_image, style: :medium, class: "sidebar-image img-rounded img-responsive"), @plant  %>
      </div>
    </div>
    <% if @plant.user == current_user && @plant.creator != current_user %>
      <div class="row sidebar-plant">
        <div class="col-xs-12">
          <% if @plant.active %>
            <%= image_tag "plant_active.gif", height: '42px', width: '30px' %> aktiv
          <% else %>
            <%= image_tag "plant_inactive.gif", height: '42px', width: '30px' %> nicht aktiv
          <% end %>
        </div>
      </div>
      <div class="row sidebar-plant">
        <div class="col-xs-12">
          Kopiert von
        </div>
      </div>
      <% if @plant.creator.picture.file? %>
        <div class="row sidebar-plant">
          <div class="col-xs-12">
              <%= link_to image_tag(@plant.creator.picture.url(:thumb), class: "img-rounded"), @plant.creator %>
          </div>
        </div>
      <% end %>
      <div class="row sidebar-plant">
        <div class="col-xs-12">
          <%= @plant.creator.display_name %>
        </div>
      </div>
    <% end %>

    <% if @plant.creator != current_user %>
      <div class="row sidebar-plant">
        <div class="col-xs-12">
          <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
          <% if current_user.voted_for?(@plant.original) %>
            besonders hilfreich
          <%# TODO: hier kÃ¶nnte ein tooltip hin: von mir als besonders hilfreich markiert %>
          <%# TODO: undo voting %>
          <% else %>
            <%= link_to 'besonders hilfreich!', vote_plant_path(@plant.original), method: :post %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
