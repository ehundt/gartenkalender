<% content_for :sidebar do %>
  <% if current_user && @plant %>
    <div class="row">
      <div class="col-xs-12">

        <% if @plant.user != current_user %>
          <div data-toggle="popover"
               data-container="body"
               data-trigger="focus"
               role="button"
               tabindex="0"
               data-placement="bottom"
               title="Veröffentlichen und privatisieren"
               data-content="Diese Pflanze kann nur durch den/die ursprüngliche AutorIn veröffentlicht oder privatisiert werden.">
        <% end %>

        <div class="plant-visibility"
             data-plant-id="<%= @plant.id %>"
             data-switch-allowed="<% if @plant.user == current_user %>1<% else %>0<% end %>"
             >
          <% if @plant.public %>
            <%= image_tag("world-globe32x32.png") %> <span>&nbsp;öffentlich</span>
          <% else %>
            <%= image_tag("not-world-globe32x32.png") %> <span>&nbsp;privat</span>
          <% end %>

          <% if @plant.user != current_user %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 sidebar-image">
        <%= link_to image_tag(download_main_image_plant_path(@plant, {size: :medium}), class: "img-rounded img-responsive"), @plant  %>
      </div>
    </div>
  <% end %>
<% end %>
