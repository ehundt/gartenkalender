    <div class="col-xs-6 original-details">
      <div class="panel panel-default">
        <div class="panel-body">
          <% if plant.original? %>
            AutorIn:&nbsp;
          <% else %>
            Kopiert von:&nbsp;
          <% end %>
          <%= link_to plant.creator.display_name, plant.creator %>
          &nbsp;

          <% unless plant.original? %>
            <% if plant.original.public %>
              <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
              <%= link_to 'Original', plant.original %>
            <% else %>
              <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
              <a data-toggle="popover"
                 data-trigger="focus"
                 data-placement="bottom"
                 data-content="Pflanze ist nicht mehr Ã¶ffentlich."
                 role="button"
                 tabindex="0">Original</a>
            <% end %>
          <% end %>

          <span class="likes-count-small" data-id=<%= plant.orig_id %> data-path="/plants/" data-likeallowed="1">

            <span><%= plant.original.get_likes.size %></span>

            <% if current_user.voted_for?(plant.original) %>
              <%= image_tag("thumb_up_voted.png") %>
            <% else %>
              <%= image_tag("thumb_up_not_voted.png") %>
            <% end %>
          </span>
        </div>
      </div>
    </div>
