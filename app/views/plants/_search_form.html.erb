<% unless current_user.friends.empty? %>
  <%= form_tag(new_plant_path, method: "get") do %>
    <div class="row">
      <div class="col-xs-12">
        <p><strong>Suche nach Pflanzen befreundeter GärtnerInnen</strong></p>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="input-group">
          <%= text_field_tag(:search, "", class: "form-control", placeholder: "z.B. Möhre")  %>
          <span class="input-group-btn">
            <%= submit_tag("suchen", class: "btn btn-default", type: "button") %>
          </span>
        </div><!-- /input-group -->
      </div><!-- /.col-xs-12 -->
    </div><!-- /.row -->
  <% end %>
<% end %>
