<%= render partial: "sidebar" %>
<%= render partial: "header" %>

<div class="row">
  <div class="col-xs-12 edit-plant-link">
    <% if user_signed_in? && (can? :clone, @plant) && (@plant.user != current_user) %>
      <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span>
      <%= link_to 'Kopieren', clone_plant_path(@plant), method: :post %>&nbsp;
    <% end %>

    <% if (can? :manage, @plant) && current_page?("/plants/#{@plant.id}") %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      <%= link_to 'Pflanze bearbeiten', edit_plant_path(@plant) %>&nbsp;

        <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
        <a data-toggle="modal" data-target="#removePlantModal<%= @plant.id %>">LÃ¶schen</a>
        <%= render partial: "modal_remove_plant", locals: { plant: @plant } %>
    <% end %>
  </div>
</div>

<h3>Pflanzenbeschreibung</h3>

<% if @plant.subtitle.present? %>
<div class="row">
  <div class="col-xs-12">
    <h5><%= @plant.subtitle %></h5>
  </div>
</div>
<% end %>

<% if @plant.desc.present? %>
<div class="row">
  <div class="col-xs-12">
    <%= raw markdown.render(@plant.desc) %>
  </div>
</div>
<% end %>

<% unless @plant.category == "keine" %>
<div class="row">
  <div class="col-xs-12">
    <strong>Kategorie: </strong><%= @plant.category.humanize %></h5>
  </div>
</div>
<% end %>

<% if @plant.location.present? %>
<div class="row">
  <div class="col-xs-12">
    <strong>Standort:</strong> <%= @plant.location %>
  </div>
</div>
<% end %>

<% if @plant.soil.present? %>
<div class="row">
  <div class="col-xs-12">
    <strong>Boden:</strong> <%= @plant.soil %>
  </div>
</div>
<% end %>

<% if @plant.ph.present? %>
<div class="row">
  <div class="col-xs-12">
    <strong>Optimaler Ph-Wert:</strong> <%= @plant.ph %>
  </div>
</div>
<% end %>
<br>

<% if can? :update, @plant %>
  <% if @plant.tasks.empty? %>
    <h4>Neue Aufgabe</h4>
    <%= render partial: "/tasks/form" %>
  <% else %>
    <div class="row">
      <div class="col-xs-12">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
          <%= link_to "Neue Aufgabe", new_plant_task_path(@plant) %>
      </div>
    </div>
  <% end %>
<% end %>
<br>
<br>
