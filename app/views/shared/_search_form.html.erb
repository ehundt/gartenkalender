<%= form_tag(plants_path, method: "get") do %>
  <div class="row global-search-form">
    <div class="col-xs-12">
      <div class="input-group">
        <%= text_field_tag(:search_name, "", class: "form-control", placeholder: "Meine Pflanzen")  %>
        <span class="input-group-btn">
          <%= submit_tag("suchen", class: "btn btn-default") %>
        </span>
      </div><!-- /input-group -->
    </div><!-- /.col-xs-12 -->
  </div><!-- /.row -->
<% end %>
