<% unless @help_content_path.blank? %>
  <button type="button" class="btn btn-default" data-toggle="popover"
       data-container="body"
       data-trigger="focus"
       title="Hilfe"
       data-placement="left"
       data-html="true"
       data-content='<%= render partial: @help_content_path + "/help_content" %>'
    >
      <%= image_tag("help.jpg", class: "img-responsive", width: "30px", height: "30px") %>
  </button>
<% end %>

<% if @plant && @plant.public %>
  <div class="icon-bar">
    <button type="button" class="btn btn-default likes-counter" data-id=<%= @plant.id %> data-path="/plants/" data-likeallowed="1">

        <% if signed_in? && current_user.voted_for?(@plant) %>
          <%= image_tag("voted_thumb_up.png") %>
        <% else %>
          <%= image_tag("unvoted_thumb_up.png") %>
        <% end %>

    </button>
    <div class="likes-count-small"><%= @plant.cached_votes_total %></div>
  </div>
<% end %>
