<h2><%= title "Phaenologische Meldungen" %></h2>
<% unless @address.empty? %>
  f√ºr <%= @address %>
<% end %>

<% unless @error.nil? %>
  <div>Leider ist ein Fehler aufgetreten: <%= @error %></div>
<% else %>

<table class="table" id="season-metadata">
  <tr>
    <td colspan="2" class="season">
      <%= @season %>
    </td>
  </tr>
  <tr>
    <td class="season-what">Quelle</td>
    <td>
      <a href="http://www.dwd.de" target="_blank">Deutscher Wetterdienst</a>
    </td>
  </tr>

  <% @season_data.each do |season| %>
    <tr>
      <td class="season-placeholder" colspan="2">
        <%= image_tag "green_flower_icon.png", height: '20px', width: '20px' %>
      </td>
    </tr>
    <tr>
      <td class="season-phase" colspan="2">
        <b><%= season[:plant] %></b>:
        <%= season[:phase] %>
      </td>
    </tr>
    <tr>
      <td class="season-what">Phaenologische Jahreszeit</td>
      <td>
        <%= season[:season] %>
      </td>
    </tr>
    <tr>
      <td class="season-what">gemeldet am</td>
      <td>
        <%= l season[:reporting_date], format: :long %>
      </td>
    </tr>
    <tr>
      <td class="season-what">
        an der Wetterstation
      </td>
      <td>
        "<%= season[:station] %>"
      </td>
    </tr>
    <tr>
      <td class="season-what">
        Entfernung zur Station
      </td>
      <td>
        <%= season[:distance] %>
      </td>
    </tr>
  <% end %>
</table>
<% end %>
