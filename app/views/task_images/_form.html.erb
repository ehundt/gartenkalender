<div class="row sidebar-form-space">
  <div class="col-xs-12">
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">Bildüberschrift</span>
      <%= f.text_field :title, :class => "form-control",
         "aria-label" => "Bildüberschrift" %>
    </div>
  </div>
</div>

<% if show_file_input_field %>
  <div class="row sidebar-form-space">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">Bild</span>
        <%= f.file_field :image, :class => "form-control",
           "aria-label" => "Bild" %>
      </div>
    </div>
  </div>

<% else %>
  <div class="row">
    <div class="col-xs-12 sidebar-form-space">
      <%= link_to image_tag(download_task_image_plant_task_task_image_path(@plant, @task, task_image, {size: :medium}), class: "img-rounded img-responsive"), edit_plant_task_path(@plant, @task) %>
    </div>
  </div>
<% end %>

<div class="row sidebar-form-space">
  <div class="col-xs-12">
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">Bildbeschreibung</span>
      <%= f.text_area :desc, :class => "form-control",
         "aria-label" => "Bildbeschreibung" %>
    </div>
  </div>
</div>

<% if f.object && f.object.persisted? %>
  <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
  <%= link_to 'Entfernen', plant_task_task_image_path(@plant, @task, f.object), method: :delete, data: { confirm: 'Wollen Sie dieses Bild mit Titel und Beschreibung wirklich löschen?' }, class: "delete-link" %>
<% end %>

<div class="pull-right sidebar-form-space">
  <%= f.submit "Bild speichern", :class => "btn btn-success" %>
</div>
