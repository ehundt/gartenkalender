<tr>
  <td><% if task.hide %>versteckt<% else %><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span><% end %></td>
  <td id="task_title"><%= link_to task.title, plant_task_path(task.plant, task) %></td>
  <td>
    <% if task.done? %>
      erledigt
    <% elsif task.upcoming? %>
      wartet auf Ausführung
    <% else %>
      steht zur Zeit nicht an
    <% end %>
  </td>
  <td>
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <%= link_to 'Ändern', edit_plant_task_path({ id: task.id, plant_id: task.plant_id }) %>&nbsp;
    <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
    <%= link_to 'Entfernen', [task.plant, task], method: :delete, data: { confirm: 'Sind Sie sicher?' }, class: "delete-link" %>
  </td>
</tr>
<tr class="task-desc">
  <td></td>
  <td colspan="7"><%= raw markdown.render(task.desc) %></td>
</tr>

