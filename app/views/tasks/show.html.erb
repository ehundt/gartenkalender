<h3><%= link_to @plant.name, @plant %></h3>

<div class="row">
  <div class="col-xs-6">
    <h3><%= @task.title %></h3>
  </div>
  <div class="col-xs-3 edit-plant-link">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <%= link_to 'Aufgabe bearbeiten', edit_plant_task_path(@plant, @task) %>
  </div>
  <div class="col-xs-3 edit-plant-link">
   <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
    <%= link_to 'Entfernen', [@task.plant, @task], method: :delete, data: { confirm: 'Sind Sie sicher?' } %>
  </div>
</div>


<table class="table">
  <tr>
    <th>Anzeigen</th>
    <th>von</th>
    <th>bis</th>
    <th>Wiederholung</th>
  </tr>
<tr class="info">
  <td><% if @task.hide %>versteckt<% else %><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span><% end %></td>
  <td><%= @task.start.humanize %></td>
  <td><%= @task.stop.humanize.titleize %></td>
  <td><%= @task.repeat.humanize %></td>
</tr>
<tr>
  <td colspan="6"><%= raw markdown.render(@task.desc) %></td>
</tr>


</table>
