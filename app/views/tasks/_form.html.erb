<div class="new-task-form">
  <% if (defined? @task)
       form_param = @task
     else
       form_param = @plant.tasks.build
     end
  %>
  <%= form_for([@plant, form_param]) do |f| %>

    <div class="input-group">
      <span class="input-group-addon">Titel</span>
      <%= f.text_field :title, :class => "form-control" %>
    </div>
    <br />
    <div class="input-group">
      <span class="input-group-addon">Beschreibung</span>
      <%= f.text_area :desc, :class => "form-control" %>
    </div>
    <br />
    <div class="input-group">
      <span class="input-group-addon">frühestens</span>
      <%= f.select :start,
          options_for_select(@start_options.collect { |w| [w[0].humanize, w[0]] }), class: 'select-box' %>
    </div>
    <br />
    <div class="input-group">
      <span class="input-group-addon">bis spätestens</span>
      <%= f.select :stop,
          options_for_select(@stop_options.collect { |w| [w[0].humanize, w[0]] }), class: 'select-box' %>
    </div>
    <br />
    <div class="input-group">
      <span class="input-group-addon">Wiederholung</span>
      <%= f.select :repeat,
          options_for_select(@repeat_options.collect { |w| [w[0].humanize, w[0]] }), class: 'select-box' %>
    </div>
    <br />
    <div class="input-group">
      <span class="input-group-addon">Anzeige</span>
      <%= radio_button("task", "hide", false) %> Aufgabe in der Aufgabenliste anzeigen<br />
      <%= radio_button("task", "hide", true) %> Aufgabe in der Aufgabenliste <b>nicht</b> anzeigen
    </div>
    <br />
    <div class="input-group">
      <span class="input-group-btn">
        <a href="<%= plant_path(@plant) %>"><button type="button" class="btn btn-default">Abbrechen</button></a>
      </span>
      <span class="input-group-btn">
        <%= f.submit :class => "btn btn-success" %>
      </span>
    </div>
  <% end %>
</div>

