<% if @show_form_for_images && @task && @task.id %>
  <% content_for :sidebar do %>
    <%= render partial: "/task_images/edit" %>
  <% end %>

<% elsif @task && !@task.task_images.empty? %>
  <% content_for :sidebar do %>
    <%= render partial: "/task_images/show" %>
  <% end %>

<% else %>
  <%= render partial: "/plants/sidebar" %>
<% end %>
