<% if current_user.plants.empty? %>
  <%= render "welcome" %>

<% else %>
  <h4>Jetzt anstehende Aufgaben</h4>

  <% if @upcoming_tasks.empty? %>
    <p>Geniesse Deinen Garten, es gibt nichts zu tun!</p>

  <% else %>
    <table class="table table-responsive">
    <% @upcoming_tasks.each do |task| %>
    <tr>
      <td>
        <% if task.plant.main_image.file? %>
          <%= link_to image_tag(download_main_image_plant_path(task.plant, {size: :thumb}), class: "img-rounded img-responsive"), task.plant %><% end %>
      </td>
      <td>
        <%= link_to task.plant.name, task.plant %>
      </td>
      <td>
        <%= link_to task.title, plant_task_path(task.plant, task) %>
      </td>
      <td>
        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#taskDoneModal">
          erledigt
        </button>
        <%= render partial: "done_tasks/modal", locals: { task: task } %>
      </td>
      <td>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <%= link_to "Ã¼berspringen", plant_task_done_tasks_path({task_id: task.id, plant_id: task.plant.id, skipped: true}), method: :post %>
      </td>
      <td>
        <div class="task-visibility" data-id="<%= task.id %>" data-plant-id="<%= task.plant.id %>" data-path="plants/">
          <span class="glyphicon glyphicon-eye-open" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" title="Sichtbarkeit in der Aufgabenliste durch Anklicken des Auges ausschalten."></span>
        </div>
      </td>
    </tr>
    <% end %>

    </table>
  <% end %>
<% end %>
