<% if current_user.plants.empty? %>
  <%= render "welcome" %>

<% else %>
  <h4>Anstehende Aufgaben</h4>

  <% if @upcoming_tasks.empty? %>
    <p>Geniesse Deinen Garten, es gibt nichts zu tun!</p>

  <% else %>
    <table class="table table-responsive">
    <% @upcoming_tasks.each do |task| %>
    <tr>
      <td>
        <% if task.plant.main_image.file? %><%= link_to image_tag(task.plant.main_image.url(:thumb), class: "img-rounded img-responsive"), task.plant %><% end %>
      </td>
      <td>
        <%= link_to task.plant.name, task.plant %>
      </td>
      <td>
        <%= link_to task.title, plant_task_path(task.plant, task) %>
      </td>
      <td>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <%= link_to "erledigt", plant_task_done_tasks_path({task_id: task.id, plant_id: task.plant.id}), method: :post %>
      </td>
      <td>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <%= link_to "Ã¼berspringen", plant_task_done_tasks_path({task_id: task.id, plant_id: task.plant.id, skipped: true}), method: :post %>
      </td>
      <td>
        <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
        <%= link_to 'nicht anzeigen', hide_plant_task_path(task.plant,task), method: :patch, class: "delete-link" %>
      </td>
    </tr>
    <% end %>

    </table>
  <% end %>
<% end %>
